<div class="page-header">
  <h1>
    Spots
    <a href="/spots/new" class="btn btn-lg btn-success">New Spot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Adress</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @spots.each do |spot| %>
      <tr>
        <td><%= spot.adress %></td>
        <td><%= spot.name %></td>
        <td>
          <a href="/spots/<%= spot.id %>" class="btn btn-primary">Show</a>
          <a href="/spots/<%= spot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_spot/<%= spot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
